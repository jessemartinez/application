<record id="collection-object" is-extension="true">
    <services-record-path id="miami">collectionobjects_miami:http://collectionspace.org/services/collectionobject/local/miami,collectionobjects_miami</services-record-path>
    <section id="coreInformation">
        <field id="nametitle" action="delete">
            <!-- Removing field since we aren't combining objectName into a unified record name -->
        </field>
    </section>
    <section id="identificationInformation">
        <repeat id="otherNumberList/otherNumber">
            <field id="numberType" in-tab="yes" seperate_ui_container="true">
                <!-- updating options -->
                <options>
                    <option id="">Please select a value</option>
                    <option id="lender">Lender</option>
                    <option id="obsolete">Obsolete</option>
                    <option id="previous">Previous</option>
                    <option id="serial">Serial</option>
                    <option id="unknown">Unknown</option>
                    <option id="inventory number">Inventory number</option>
                    <option id="object number">Object number</option>
                    <option id="Drupal number">Drupal number</option>
                </options>
            </field>
        </repeat>
        <repeat id="responsibleDepartments">
            <field id="responsibleDepartment" ui-search="" mini="" seperate_ui_container="true">
                <!-- removing mini=list,search attribute -->
            </field>
        </repeat>
        <field id="collection" ui-search="repeatable" seperate_ui_container="true">
            <!-- removing options block -->
            <options action="delete"/>
        </field>
        <field id="recordStatus" mini="search,list" ui-search="repeatable" autocomplete="vocab-recordStatus" ui-type="enum" seperate_ui_container="true">
            <!-- removing options block; adding vocab-recordStatus vocab; adding mimi=search,list attribute  -->
            <options action="delete"/>
        </field>
        <repeat id="titleGroupList/titleGroup">
            <field id="title" ui-search="repeatable" in-title="yes" mini="summary,search,list,relate">
                <!-- Making Title the sole summary field; added 'summary' and 'relate' to mini attribute -->
            </field>
        </repeat>
        <repeat id="objectTags" section="miami">
            <field id="objectTag" autocomplete="vocab-objectTag" ui-type="enum" ui-search="repeatable" section="miami"></field>
        </repeat>
        <field id="specialStatus" autocomplete="vocab-specialStatus" ui-type="enum" ui-search="repeatable" section="miami"></field>
        <field id="exhibited" section="miami"></field>
        <repeat id="policeReportGroupList/policeReportGroup" section="miami">
            <field id="policeReportNumber" section="miami"></field>
            <field id="policeReportDate" ui-type="date" datatype="date" section="miami"></field>
            <field id="policeReportNote" section="miami"></field>
        </repeat>
        <field id="signageStatus" autocomplete="vocab-signageStatus" ui-type="enum" ui-search="repeatable" section="miami"></field>
        <repeat id="securities" section="miami">
            <field id="security" autocomplete="vocab-security" ui-type="enum" ui-search="repeatable" section="miami"></field>
        </repeat>
        <field id="recordObjectType" autocomplete="vocab-recordObjectType" ui-type="enum" ui-search="repeatable" section="miami"></field>
        <repeat id="videoGroupList/videoGroup" section="miami">
            <field id="videoType" autocomplete="vocab-videoType" ui-type="enum" section="miami"></field>
            <field id="videoURL" ui-type="externalURL" section="miami"></field>
            <field id="videoNote" section="miami"></field>
        </repeat>
    </section>
    <section id="descriptionInformation">
        <repeat id="objectStatusList" services-type-anonymous="false">
            <field id="objectStatus" mini="search,list" ui-search="repeatable" autocomplete="vocab-recordType" ui-type="enum" seperate_ui_container="true">
                <!-- removing options block; adding vocab-recordType vocab; adding mimi=search,list attribute -->
                <options action="delete"/>
            </field>
        </repeat>
    </section>
</record>