<record id="location" is-extension="true">
    <services-record-path id="miami">locations_miami:http://collectionspace.org/services/location/local/miami,locations_miami</services-record-path>
    <section id="locationTermInformation">
        <field id="address" mini="list" ui-search="repeatable">
            <!-- adding mini=list attribute -->
        </field>
        <!--field id="addressAgency" autocomplete="vocab-addressAgency" ui-type="enum" section="miami"></field-->
        <field id="addressRegion" autocomplete="vocab-addressRegion" ui-type="enum" section="miami"></field>
        <field id="addressBuilding" section="miami"></field>
        <field id="addressStreet" section="miami"></field>
        <field id="addressCity" section="miami"></field>
        <field id="addressState" section="miami"></field>
        <field id="addressZipCode" section="miami"></field>
        <field id="addressDistrict" section="miami">
            <options>
                <option id="">Please select a value</option>
                <option id="1">1</option>
                <option id="2">2</option>
                <option id="3">3</option>
                <option id="4">4</option>
                <option id="5">5</option>
                <option id="6">6</option>
                <option id="7">7</option>
                <option id="8">8</option>
                <option id="9">9</option>
                <option id="10">10</option>
                <option id="11">11</option>
                <option id="12">12</option>
                <option id="13">13</option>
            </options>
        </field>
        <!--=field id="addressFloorRoom" section="miami"></field-->
        <field id="addressDirection" section="miami"></field>
        <field id="addressLongitude" mini="list" ui-type="validated" datatype="float" section="miami"></field>
        <field id="addressLatitude"  mini="list" ui-type="validated" datatype="float" section="miami"></field>
        <field id="locatedOutside" section="miami">
            <options>
                <option id="">Please select a value</option>
                <option id="yes">yes</option>
                <option id="no">no</option>
            </options>
        </field>
    </section>
</record>
