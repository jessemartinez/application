<record id="acquisition">
    <services-record-path id="mmi">acquisitions_mmi:http://collectionspace.org/services/acquisition/local/mmi,acquisitions_mmi</services-record-path>
    <section id="acquisitionInformation">
        <field id="acquisitionExtent" section="mmi">
            <selector>acquisition-acquisitionExtent</selector>
        </field>
        <field id="mmiAccessionDate" ui-type="date" section="mmi">
            <selector>acquisition-mmiAccessionDate</selector>
        </field>
        <repeat id="mmiAcquisitionDates" section="mmi">
            <field id="mmiAcquisitionDate" ui-type="date" section="mmi">
                <selector>acquisition-mmiAcquisitionDate</selector>
            </field>
        </repeat>
        <!-- updated options list -->
        <field id="acquisitionMethod">
            <options>
                <option id="">Please select a value</option>
                <option id="gift">Gift</option>
                <option id="purchase">Purchase</option>
                <option id="bequest">Bequest</option>
                <option id="loan">Loan</option>
                <option id="restrictedgifts">Restricted gifts</option>
            </options>
        </field>
        <repeat id="acquisitionSources">
            <!-- change autocomplete to only use person-person -->
            <field id="acquisitionSource" autocomplete="person-person"/>
        </repeat>
        <repeat id="owners">
            <!-- change autocomplete to only use person-person -->
            <field id="owner" autocomplete="person-person"/>
        </repeat>
        <repeat id="acquisitionFundingList/acquisitionFunding">
            <!-- change autocomplete to only use person-person -->
            <field id="acquisitionFundingSource" autocomplete="person-person"/>
        </repeat>
    </section>
</record>