<!-- Cloned from base-authority-place -->
<!-- Following comment inherited from that file -->
<!-- XXX uispec Urls have been edited/fixed to match those been generated by this xml for the time being -->
<record id="work" type="authority,compute-displayname">
    <web-url>work</web-url>
    <services-tenant-singular>Workauthority</services-tenant-singular>
    <services-tenant-plural>Workauthorities</services-tenant-plural>
    <services-instances-path>workauthorities_common:http://collectionspace.org/services/work,abstract-common-list/list-item</services-instances-path>
    <services-single-instance-path>workauthorities_common:http://collectionspace.org/services/work,workauthorities_common</services-single-instance-path>
    <services-list-path>http://collectionspace.org/services/work,abstract-common-list/list-item</services-list-path>
    <services-record-path>works_common:http://collectionspace.org/services/work,works_common</services-record-path>
    <services-record-path id="collectionspace_core">collectionspace_core:http://collectionspace.org/collectionspace_core/,collectionspace_core</services-record-path>
    <services-url>workauthorities</services-url>
    <authority-vocab-type>WorkAuthority</authority-vocab-type>
    <hassoftdelete>true</hassoftdelete>
    <structures>
        <structure id="search">
            <view>
                <label-section id="messagekeys" show="true"></label-section>
            </view>
        </structure>
        <structure id="screen">
            <view>
                <label-section id="messagekeys" show="true"></label-section>
                <hierarchy-section show="true">
                    <options>
                        <option id="narrowerContext">work-work</option>
                        <option id="broaderContext">work-work</option>
                    </options>
                </hierarchy-section>
            </view>
        </structure>
    </structures>

    <include src="domain-authority-work.xml" strip-root="yes"/>

    <instances>
        <instance id="work-work">
            <web-url>work</web-url>
            <title-ref>work</title-ref>
            <title>Default Work Authority</title>
        </instance>
        <instance id="work-worktest1">
            <web-url>worktest1</web-url>
            <title-ref>worktest1</title-ref>
            <title>Test Work Authority 1</title>
        </instance>
        <instance id="work-worktest2">
            <web-url>worktest2</web-url>
            <title-ref>worktest2</title-ref>
            <title>Test Work Authority 2</title>
        </instance>
    </instances>
    <section>
        <field id="tenantID" section="collectionspace_core" attributes="GET"></field>
        <field id="createdBy" ui-search="repeatable" section="collectionspace_core" attributes="GET"></field>
        <field id="updatedBy" ui-search="repeatable" section="collectionspace_core" attributes="GET"></field>
        <field id="createdAt" section="collectionspace_core" attributes="GET"></field>
        <field id="updatedAt" ui-search="range" ui-type="date" section="collectionspace_core" attributes="GET" mini="search,list,relate"></field>
    </section>
    <section id="workAuthorityInformation">
        <field id="scopeNote" ui-search="repeatable"/>
        <field id="sourceNote" ui-search="repeatable"/>
        <field id="indexingNote" ui-search="repeatable"/>
        <field id="historyNote" ui-search="repeatable"/>
        <field id="genre" ui-search="repeatable">
            <options>
                <option id="" default="yes">Please select a value</option>
                <option id="film">Film</option>
                <option id="other">Other</option>
            </options>
        </field>
        <field id="medium" ui-search="repeatable">
            <options>
                <option id="" default="yes">Please select a value</option>
                <option id="film">Film</option>
                <option id="other">Other</option>
            </options>
        </field>
        <repeat id="creatorGroupList/creatorGroup">
            <field id="creator" autocomplete="person-person" ui-search="repeatable"/>
            <field id="creatorType">
                <options> <!-- to be turned into a dynamic term list -->
                    <option id="" default="yes">Please select a value</option>
                    <option id="artist">Artist</option>
                    <option id="director">Director</option>
                    <option id="publishingcompany">Publishing Company</option>
                    <option id="developer">Developer</option>
                    <option id="productioncompany">Production Company</option>
               </options>
            </field>
        </repeat>
        <repeat id="publisherGroupList/publisherGroup">
            <field id="publisher" autocomplete="person-person" ui-search="repeatable"/>
            <field id="publisherType">
                <options>  <!-- to be turned into a dynamic term list -->
                    <option id="" default="yes">Please select a value</option>
                    <option id="networkcableservice">Network/cable service</option>
                    <option id="distributioncompany">Distribution company</option>
                    <option id="publishingcompany">Publishing Company</option>
               </options>
            </field>
        </repeat>
        <repeat id="workTermGroupList/workTermGroup">
            <field id="termDisplayName" ui-search="repeatable" in-title="yes" display-name="yes" mini="summary,number,search,list,relate,terms">
                <title-selector>titleBar-termDisplayName</title-selector>
            </field>
            <field id="termName"/>
            <field id="termStatus" ui-search="repeatable" seperate_ui_container="true" mini="search,list,relate">
                <options>
                    <option id="" default="yes">Please select a value</option>
                    <option id="quickadded">Quick Added</option>
                    <option id="needsattantion">Needs Attention</option>
                    <option id="inprogress">In Progress</option>
                    <option id="complete">Complete</option>
                </options>
            </field>
            <field id="termSource" autocomplete="vocab-worksource" ui-type="enum"/>
            <field id="termSourceDetail"/>
            <field id="termSourceID"/>
            <field id="termSourceNote"/>
        </repeat>
        <repeat id="workDateGroupList/workDateGroup">
            <group id="workDate" xxx-services-no-repeat="true"
                    ui-type="groupfield/structureddate" primarykey="dateDisplayDate"
                    ui-func="cspace.structuredDate"/>
        </repeat>
    </section>
    <!-- not used in UI except in autocompletes -->
    <section>
        <field id="shortIdentifier" mini="search,list,relate" attributes="GET"></field>
        <field id="csid" mini="search,list,relate" attributes="GET"></field>
        <field id="refName" mini="search,list,relate" attributes="GET"></field>
        <field id="uri" mini="search,list,relate" attributes="GET"></field>
    </section>
</record>