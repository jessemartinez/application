<record id="valuationcontrol" is-extension="true">
    <services-record-path id="miami">valuationcontrols_miami:http://collectionspace.org/services/valuationcontrol/local/miami,valuationcontrols_miami</services-record-path>
    <section id="objectValuationInformation">
        <field id="valueType" ui-search="repeatable" in-title="no" mini="">
            <!-- removing mini attribute and setting in-title to be "no" -->
        </field>
        <repeat id="fairMarketGroupList/fairMarketGroup" section="miami">
            <field id="fairMarketValue" autocomplete="vocab-fairMarketValue" ui-type="enum" in-title="yes" ui-search="repeatable" mini="summary,search,list,relate" section="miami"/>
            <field id="fairMarketCurrency" autocomplete="vocab-currency" ui-type="enum" section="miami"/>
            <field id="fairMarketAmount" ui-type="validated" datatype="float" section="miami"/>
            <field id="fairMarketDate" ui-type="date" datatype="date" section="miami"/>
        </repeat>
    </section>
</record>