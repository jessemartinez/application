<record id="acquisition" is-extension="true">
    <services-record-path id="miami">acquisitions_miami:http://collectionspace.org/services/acquisition/local/miami,acquisitions_miami</services-record-path>
    <section id="acquisitionInformation">
        <field id="acquisitionMethod" ui-search="repeatable" seperate_ui_container="true">
            <!-- updating options list -->
            <options>
                <option id="">Please select a value</option>
                <option id="Gift">Gift</option>
                <option id="Exchange">Exchange</option>
                <option id="Commission">Commission</option>
                <option id="Proposal">Proposal</option>
                <option id="Purchase">Purchase</option>
                <option id="Transfer">Transfer</option>
                <option id="Treasure">Treasure</option>
            </options>
        </field>
        <repeat id="acquisitionFundingList/acquisitionFunding">
            <field id="acquisitionFundingCurrency" autocomplete="vocab-currency" ui-type="enum">
                <!-- updating default value -->
                <enum>
                    <default>urn:cspace:miamidadepublicart.org:vocabularies:name(currency):item:name(USD)'US Dollar'</default>
                </enum>
            </field>
        </repeat>
        <field id="trustResolutions" section="miami"></field>
    </section>
</record>