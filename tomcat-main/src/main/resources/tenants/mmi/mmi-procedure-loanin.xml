<record id="loanin" is-extension="true" type="record,procedure">

    <services-record-path id="mmi">
        loansin_mmi:http://collectionspace.org/services/loanin/local/mmi,loansin_mmi
    </services-record-path>
    <section id="loaninInformation">
    	<field id="loanInNumber" ui-search="repeatable" in-title="yes" chooser="yes" mini="number,search,list,relate" 
    		seperate_ui_container="true">
            <title-selector>titleBar-loanInNumber</title-selector>
            <selector>loanIn-loanInNumber</selector>
            <container-selector>loanIn-loanInNumber-patternChooserContainer</container-selector>
            <!-- update options -->
            <options>
                <option id="mmi-loanin-lot" sample="IL2019.001">Loan In</option>
            </options>
        </field>
        <repeat id="lenderGroupList/lenderGroup">
            <!-- change autocomplete to only use person-person -->
            <field id="lender" ui-search="repeatable" autocomplete="person-person" in-title="yes" mini="summary,search,list">
                <selector>loanIn-lender</selector>
            </field>
        </repeat>
        <field id="loanInCreditLine" section="mmi"></field>
    </section>
</record>