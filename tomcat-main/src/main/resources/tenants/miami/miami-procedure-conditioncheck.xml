<record id="conditioncheck" is-extension="true">
    <services-record-path id="miami">conditionchecks_miami:http://collectionspace.org/services/conditioncheck/local/miami,conditionchecks_miami</services-record-path>
    <section id="objectConditionInformation">
        <repeat id="conditionCheckGroupList/conditionCheckGroup">
            <field id="condition" ui-search="repeatable" seperate_ui_container="true" mini="">
                <!-- removing mini attributes -->
            </field>
        </repeat>
        <field id="conservationTreatmentPriority" ui-search="repeatable" in-title="yes" mini="summary,search,list,relate" seperate_ui_container="">
            <!-- adding mini attributes -->
        </field>
        <field id="conservationCostEstimateCurrency" autocomplete="vocab-currency" ui-type="enum" section="miami">
            <enum>
                <default>urn:cspace:miamidadepublicart.org:vocabularies:name(currency):item:name(USD)'US Dollar'</default>
            </enum>
        </field>
        <field id="conservationCostEstimateValue" ui-type="validated" datatype="float" section="miami"></field>
        <repeat id="maintenanceScheduleGroupList/maintenanceScheduleGroup" section="miami">
            <field id="maintenanceFrequency" autocomplete="vocab-maintenanceFrequency" ui-type="enum" section="miami"></field>
            <field id="maintenanceActionRequired" autocomplete="vocab-maintenanceActionRequired" ui-type="enum" section="miami"></field>
        </repeat>
        <field id="previousMaintenance" section="miami"></field>
        <field id="previousActionDate" ui-type="date" datatype="date" section="miami"></field>
        <field id="previousActionDescription" section="miami"></field>
        <field id="lastActionDate" ui-type="date" datatype="date" section="miami"></field>
        <field id="lastActionDateNote" section="miami"></field>
    </section>
</record>