<record id="collection-object" is-extension="true">
    <services-record-path id="miami">collectionobjects_miami:http://collectionspace.org/services/collectionobject/local/miami,collectionobjects_miami</services-record-path>
    <section id="coreInformation">
        <field id="nametitle" action="delete">
            <!-- Removing field since we aren't combining objectName into a unified record name -->
        </field>
    </section>
    <section id="identificationInformation">
        <field id="collection" ui-search="repeatable" seperate_ui_container="true">
            <!-- removing options block -->
            <options action="delete"/>
        </field>
        <field id="recordStatus" ui-search="repeatable" autocomplete="vocab-recordStatus" ui-type="enum" seperate_ui_container="true">
            <!-- removing options block; adding vocab-recordStatus vocab -->
            <options action="delete"/>
        </field>
        <repeat id="titleGroupList/titleGroup">
            <field id="title" ui-search="repeatable" in-title="yes" mini="summary,search,list,relate">
                <!-- Making Title the sole summary field; added 'summary' and 'relate' to mini attribute -->
            </field>
        </repeat>
        <repeat id="objectTags" section="miami">
            <field id="objectTag" autocomplete="vocab-objectTag" ui-type="enum" section="miami"></field>
        </repeat>
        <field id="specialStatus" autocomplete="vocab-specialStatus" ui-type="enum" section="miami"></field>
        <field id="exhibited" section="miami"></field>
        <repeat id="policeReportGroupList/policeReportGroup" section="miami">
            <field id="policeReportNumber" section="miami"></field>
            <field id="policeReportDate" ui-type="date" datatype="date" section="miami"></field>
            <field id="policeReportNote" section="miami"></field>
        </repeat>
        <field id="signageStatus" autocomplete="vocab-signageStatus" ui-type="enum" section="miami"></field>
        <repeat id="securities" section="miami">
            <field id="security" autocomplete="vocab-security" ui-type="enum" section="miami"></field>
        </repeat>
        <field id="currentLocation" autocomplete="location-location" section="miami"></field>
        <field id="computedCurrentLocationDetails" services-readonly="true" authref-in-services="true"></field>
    </section>
    <section id="descriptionInformation">
        <repeat id="objectStatusList" services-type-anonymous="false">
            <field id="objectStatus" ui-search="repeatable" autocomplete="vocab-recordType" ui-type="enum" seperate_ui_container="true">
                <!-- removing options block; adding vocab-recordType vocab -->
                <options action="delete"/>
            </field>
        </repeat>
    </section>
</record>