<record id="location">
    <instances id="location">
        <instance id="location-offsite_sla">
            <web-url>offsite_sla</web-url>
            <title-ref>offsite_sla</title-ref>
            <!-- deactivating non-preferred terms in term completion -->
            <nptAllowed>false</nptAllowed>
            <title>Offsite Storage Locations</title>
        </instance>
        <instance id="location-location">
            <web-url>location</web-url>
            <title-ref>location</title-ref>
            <!-- deactivating non-preferred terms in term completion -->
            <nptAllowed>false</nptAllowed>
            <title>Local Storage Locations</title>
        </instance>
    </instances>
    <section id="locationTermInformation">
       <!-- changed term list from dynamic to static -->
       <field id="locationType">
            <selector>location-type</selector>
            <options>
                <option id="">Please select a value</option>
                <option id="room">Room</option>
                <option id="row">Row</option>
                <option id="bay">Bay</option>
                <option id="shelf">Shelf</option>
                <option id="gallery">Gallery</option>
                <option id="floor">Floor</option>
                <option id="rack">Rack</option>
                <option id="section">Section</option>
                <option id="subsection">Sub-section</option>
            </options>
        </field>
    </section>
</record>