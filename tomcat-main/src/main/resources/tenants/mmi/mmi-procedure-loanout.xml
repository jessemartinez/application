<record id="loanout">
    <section id="loanoutInformation">
    	<field id="loanOutNumber" ui-search="repeatable" in-title="yes" chooser="yes" mini="number,search,list,relate" 
    		seperate_ui_container="true">
            <title-selector>titleBar-loanOutNumber</title-selector>
            <selector>loanOut-loanOutNumber</selector>
            <container-selector>loanOut-loanOutNumber-patternChooserContainer</container-selector>
            <options>
                <option id="mmi-loanout-lot" sample="OL2019.001">Loan Out</option>
            </options>
        </field>
        <!-- change autocomplete to only use person-person -->
        <field id="borrower" ui-search="repeatable" autocomplete="person-person" mini="summary,list" in-title="yes">
            <selector>loanOut-borrower</selector>
        </field>
    </section>
</record>