<record id="media" is-extension="true">
    <services-record-path id="omca">media_omca:http://collectionspace.org/services/media/local/omca,media_omca</services-record-path>
    <section id="mediaInformation">
        <field id="identificationNumber" sortKey="sortableIdentificationNumber">
            <!-- adding sortKey attribute -->
            <options>
                <option id="omca_media" sample="MH2015.1">Media Resource</option>
            </options>
        </field>
        <repeat id="types">
            <field id="type" ui-search="repeatable" autocomplete="vocab-mediaType" ui-type="enum">
                <!-- removing options block; adding vocab-mediaType vocab -->
                <options action="delete"/>
            </field>
        </repeat>
        <field id="isPrimary" datatype="boolean" section="omca"></field>
        <field id="approveForPublic" datatype="boolean" section="omca"></field>
        <field id="sortableIdentificationNumber" section="omca" mini="list" ui-type="computed" ui-args="identificationNumber" ui-func="cspace.util.computeSortableObjectNumber" ui-readonly="true">
            <!-- adding computed sortable ID number -->
        </field>
    </section>
</record>